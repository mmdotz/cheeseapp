
<h1>Listing Cheeses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>User</th>
      <th>Vote now for your Fave Cheese!</th>
      <thcolspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheeses.each do |cheese| %>
      <tr>
        <td><%= cheese.name %></td>
        <td><%= cheese.desc %></td>
        <td><%= cheese.user.name %></td>
        <td><% react_component('Favorite', cheeseid: cheese.id, userid: current_user.id) %></td>
        <td class="btn btn-info btn-xs"><%= link_to 'Delete this selection', cheese, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
